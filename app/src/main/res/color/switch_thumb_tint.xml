<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State Disabled, Unchecked -->
    <item
        android:alpha="0.38"
        android:color="@color/buttons_and_frame_color"
        android:state_enabled="false" android:state_checked="false"/>

    <!-- State Disabled, Checked -->
    <item
        android:alpha="1"
        android:color="#838383"
        android:state_enabled="false" android:state_checked="true"/>

    <!-- State Checked, Pressed -->
    <item android:color="@color/snake_background_color" android:state_checked="true" android:state_pressed="true"/>

    <!-- State Checked -->
    <item android:color="@color/snake_background_color" android:state_checked="true"/>

    <!-- State Unchecked, Pressed -->
    <item android:color="@color/snake_color" android:state_pressed="true"/>

    <!-- State Unchecked -->
    <item android:color="@color/snake_color"/>
</selector>